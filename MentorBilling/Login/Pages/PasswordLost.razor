@inject IJSRuntime JSRuntime 

<div class="main">
    <div class="content px-4">
        <div class="center-screen">
            <h1>Resetare Parola</h1>
            <br/>
            <!--The Main EditForm for the Password Reset-->
            <EditForm Model="@PageController" OnValidSubmit="@(e => ValidateForm(true))" OnInvalidSubmit="@(e => ValidateForm(false))">
                <!--The DataAnnotationsValidator binds the page to the object errors-->
                <DataAnnotationsValidator />
                <p>Introduceti adresa de mail pentru care doriti sa va resetati parola.</p>
                <p>Daca adresa de mail are un cont activ asociat veti primi un mail ce va contine un link de redirectionare catre pagina de resetare a parolei.</p>
                <!--Then we add the elements-->
                <!--The Div containing the Label, InputText and ValidationMessage for the Email-->
                <div class="form-group">
                    <!--The Label Display for the Email-->
                    <label class="col-form-label">Adresa de mail</label>
                    <!--The Main Input Box the Password and the specific Validation Error-->
                    <div>
                        <InputText id="tbEmail" class="form-control" placeholder="Adresa de mail" @bind-Value="PageController.Email" />
                        <!--The Validation Message bount to the specific error-->
                        <ValidationMessage For="@(() => PageController.Email)" />
                        <ValidationMessage For="@(() => PageController.DoesUsernameExist)" />
                    </div>
                </div>
                <div class="form-group text-center mb-0">
                    <button type="submit" class="btn btn-primary-validate" id="BtnReset">Resetare Parola</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>
