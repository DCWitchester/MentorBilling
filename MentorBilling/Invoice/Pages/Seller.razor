@inject IJSRuntime JSRuntime 

<div>
    <EditForm EditContext="EditContext" OnValidSubmit="@(()=>ValidateLogin(true))" OnInvalidSubmit="(()=>ValidateLogin(false))">
        <DataAnnotationsValidator />
        <!--The central div containing an object group for an item: Label, InputText, ValidationMessage-->
        <div class="form-group row mb-1">
            <!--The Label for the Object-->
            <label class="col-sm-3 col-form-label">Furnizor:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-9">
                <!--The Input Controller-->
                <InputText class="form-control" placeholder="Denumire Furnizor" @bind-Value="@PageController.Name" disabled="@PageController.DisableController" />
                <!--The Validation Message-->
                <ValidationMessage For="@(()=>PageController.Name)" />
            </div>
        </div>
        <!--The central div containing an object group for an item: Label, InputText, ValidationMessage-->
        <div class="form-group row mb-1">
            <!--The Label for the Object-->
            <label class="col-sm-3 col-form-label">Nr.ord.Reg.Com/an:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-9">
                <!--The Input Controller-->
                <InputText class="form-control" placeholder="Numar Ordine Registru Comert" @bind-Value="@PageController.CommercialRegistryNumber" disabled="@PageController.DisableController" />
                <!--The Validation Message-->
                <ValidationMessage For="@(()=>PageController.CommercialRegistryNumber)" />
            </div>
        </div>
        <!--The central div containing an object group for an item: Label, InputText, ValidationMessage-->
        <div class="form-group row mb-1">
            <!--The Label for the Object-->
            <label class="col-sm-3 col-form-label">Cod fiscal:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-6">
                <!--The Input Controller-->
                <InputText class="form-control" placeholder="Cod de identificare fiscala" @bind-Value="@PageController.FiscalCode" disabled="@PageController.DisableController" />
                <!--The Validation Message-->
                <ValidationMessage For="@(()=>PageController.FiscalCode)" />
            </div>
            <div class="col-sm-3">
                <button class="btn-primary-auxilliary" style="margin-top:5px; margin-bottom:0px;" type="button" @onclick="@GetAnafCompany" disabled="@PageController.DisableController">Preluare Online</button>
            </div>
        </div>
        <!--The central div containing an object group for an item: Label, InputText, ValidationMessage-->
        <div class="form-group row mb-1">
            <!--The Label for the Object-->
            <label class="col-sm-3 col-form-label">Capital Social:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-9">
                <!--The Input Controller-->
                <InputNumber class="form-control" placeholder="Capital Social" @bind-Value="@PageController.JointStock" disabled="@PageController.DisableController" />
                <!--The Validation Message-->
                <ValidationMessage For="@(()=>PageController.JointStock)" />
            </div>
        </div>
        <!--The central div containing an object group for an item: Label, InputText, ValidationMessage-->
        <div class="form-group row mb-1">
            <!--The Label for the Object-->
            <label class="col-sm-3 col-form-label">Sediul:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-9">
                <!--The Input Controller-->
                <InputText class="form-control" placeholder="Sediul" @bind-Value="@PageController.Headquarters" disabled="@PageController.DisableController" />
                <!--The Validation Message-->
                <ValidationMessage For="@(()=>PageController.Headquarters)" />
            </div>
        </div>
        <div>
            @foreach (var element in PageController.BankAccountControllers)
            {
                <!--the BankAccount with the needed parameters-->
                <MentorBilling.AuxilliaryComponents.Pages.BankAccount PageController="@(element.SetElementIndex(PageController.BankAccountControllers.IndexOf(element)))"
                                                                      BankAccountDisplayController="@BankAccountDisplayController"
                                                                      SellerDisplayController="@SellerDisplayController"
                                                                      LastItem="@(element==PageController.BankAccountControllers.Last())" />
            }
        </div>
        <!--#region Secondary Elements-->
        <!--The central div containing an object group for an item: Label, InputText, ValidationMessage-->
        <div class="form-group row mb-1">
            <!--The Label for the Object-->
            <label class="col-sm-3 col-form-label">Website:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-4">
                <!--The Input Controller-->
                <InputText class="form-control" placeholder="Website" @bind-Value="@PageController.Website" disabled="@PageController.DisableController" />
            </div>
            <!--The Label for the Object-->
            <label class="col-sm-1 col-form-label">Telefon:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-4">
                <!--The Input Controller-->
                <InputText class="form-control" placeholder="Telefon" @bind-Value="@PageController.Phone" disabled="@PageController.DisableController" />
            </div>
        </div>
        <div class="form-group row mb-1">
            <!--The Label for the Object-->
            <label class="col-sm-3 col-form-label">Mail:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-9">
                <!--The Input Controller-->
                <InputText class="form-control" placeholder="Mail" @bind-Value="@PageController.Email" disabled="@PageController.DisableController" />
            </div>
        </div>
        <div class="form-group row mb-1">
            <!--The Label for the Object-->
            <label class="col-sm-3 col-form-label">Punct Lucru:</label>
            <!--The div containin the inputText and the Validation Message-->
            <div class="col-sm-9">
                <!--The Input Controller-->
                <InputText class="form-control" placeholder="Punct de lucru" @bind-Value="@PageController.WorkPoint" disabled="@PageController.DisableController" />
            </div>
        </div>
        <!--#endregion-->
        @if (@PageController.DisableController)
        {
            <button type="button" class="btn-primary-validate">Modifica Furnizor</button>
        }
        else
        {
            <button type="submit" class="btn-primary-validate">Blocheaza Furnizor</button>
        }
        <button type="button" class="btn-primary-mentor">Gestioneaza Parteneri</button>
    </EditForm>
</div>