<!--The Edit Form bound to the page context-->
<EditForm EditContext="EditContext">
    <!--The data annotation validator used to call the validation on the edit form-->
    <DataAnnotationsValidator/>
    <!--The DIV Containing the label and the input select-->
    <div class="form-group row mb-1">
        @if (DisplayLabel)
        {
            <!--the label display shown when and as needed-->
            <label class="col-sm-3 col-form-label">Cota TVA</label>
        }
        <div class="col-sm-9" style="height:inherit; text-align:center; display:flex">
            <!--The input select directly bound to the page controller-->
            <InputSelect ValueExpression="@(()=>PageController.SelectedVATRate.DisplayName)"
                         Value="@(PageController.SelectedVATRate.DisplayName)"
                         ValueChanged="@((String value) => SelectElement(value))"
                         style="height:inherit; width:inherit; text-align:center">
                <!--the iteration of the VAT Rates list-->
                @foreach(var vatRate in PageController.VATRates)
                {
                    <option value="@vatRate.DisplayName">@vatRate.DisplayName</option>
                }
            </InputSelect>
        </div>
    </div>
</EditForm>